</footer><script>
    // Affiche login admin
    function showAdminLogin() {
        document.getElementById('adminLogin').style.display = 'block';
    }

    // Vérifie mot de passe
    function checkPassword() {
        const password = document.getElementById('adminPassword').value;
        if(password === "EasyTech123") { // change le mot de passe ici
            document.getElementById('adminLogin').style.display = 'none';
            document.getElementById('adminArea').style.display = 'block';
        } else {
            alert("Mot de passe incorrect!");
        }
    }

    // Ajouter un cours
    function addCourse() {
        const content = document.getElementById('newCourse').value;
        if(content.trim() === "") return alert("Le contenu est vide!");
        const courseDiv = document.createElement('div');
        courseDiv.className = 'course';
        const parts = content.split("\n", 2);
        courseDiv.innerHTML = "<h3>" + parts[0] + "</h3><p>" + (parts[1] || "") + "</p>";
        document.getElementById('courses').appendChild(courseDiv);
        document.getElementById('newCourse').value = "";
        alert("Cours ajouté!");
    }
</script></body>
